{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ES2020",
		"jsx": "react",
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@public/*": ["public/*"],
			"@components/*": ["src/components/*"],
			"@pages/*": ["src/pages/*"],
			"@utils/*": ["src/utils/*"],
			"@hooks/*": ["src/hooks/*"],
		}
	},
	"exclude": ["node_modules", "**/node_modules/*"]
}